
<!-- include header -->
    <%- include('include/_header.ejs') %>
<!-- /include header -->


    <!-- Main Site -->
    <main id="site-main">
        <div class="container">
            <div class="box-nav d-flex justify-between">
                <a href="/product/add_product" class="border-shadow">
                    <span class="text-gradient">New product <i class="fas fa-user"></i></span>
                </a>
            </div>

            <!-- form handling -->
            <form action="/product/list" method="POST"  enctype="multipart/form-data">
                <table class="table">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Availability</th>
                            <th>Description</th>
                            <th>Image</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%- include('include/_show.ejs') %>
                    </tbody>
                </table>
            </form>
        </div>
    </main>
<!-- /Main Site -->


<!-- include footer -->
<%- include('include/_footer.ejs') %>
