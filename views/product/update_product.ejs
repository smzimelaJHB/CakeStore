
<!-- include header -->
<%- include('include/_header.ejs') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/product"><i class="fas fa-angle-double-left"></i> All product</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update product</h2>
            <span class="text-light">Use the below form to Update an account</span>
        </div>

        <!-- add product form -->
         <!-- form handling -->
    <form action="/product/list" method="POST" id="update_product" enctype="multipart/form-data">
        <div class="new_product">
            
            <div class="form-group">
                <label for="name" class="text-light">Name</label>
                <!-- <input type="hidden" name="id" value="<%= product._id %>"> -->
                <input type="text" name="name" value="<%= product.name %>" placeholder="Mark Stoenis">
            </div>

            <div class="form-group">
                <label for="price" class="text-light">Price</label>
                <input type="text" name="price" value="<%= product.price%>" placeholder="R 0.00">
            </div>

            <div class="form-group">
                <label for="imagep" class="text-light">Image</label>
                <input type="file" class="form-control-file" name="imagep" value="<%= product.image%>" placeholder="myimage.png">
            </div>

            <div class="form-group">
                <label for="description" class="text-light">Description</label>
                <input type="text" name="description" value="<%= product.description%>" placeholder="description">
            </div>

            <div class="form-group">
                <label for="availabily" class="text-light">Availabily</label>
                <div class="radio inline">
                    <input type="radio" id="radio-2" name="availabily" value="available" <%= product.availabily == 'available' ? 'checked' : '' %>>
                    <label for="radio-2" class="radio-label">Available</label>
                </div>
                <div class="radio inline">
                    <input type="radio" id="radio-3" name="availabily" value="not Available"  <%= product.availabily == 'not available' ? 'checked' : '' %> >
                    <label for="radio-3" class="radio-label">Not available</label>
                </div>
            </div>
    

            <div class="form-group">
                <button type="submit" class="btn text-dark update">Save</button>
            </div>

        </div>
    </form>
       
    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer.ejs') %>
<!-- /include footer -->
