 <!-- form handling -->
 <form action="/product/list" method="POST" enctype="multipart/form-data" id="add_product">
    <div class="new_product">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Black forest" required>
        </div>
        
        <div class="form-group">
            <label for="price" class="text-light">Price</label>
            <input type="text" name="price" value="" placeholder="R 0.00">
        </div>

        <div class="form-group">
            <label for="description" class="text-light">Description</label>
            <!-- <textarea name="description" id="description" cols="30" rows="4"></textarea>  -->
            <input type="text" name="description" value="" placeholder="One story rounded cake, some flowers for decorations">
        </div>

        <div class="form-group">
            <label for="imagep" class="text-light">Product image</label>
            <input type="file" accept="image/*" name="imagep" class="form-control-file" placeholder="cake1.jpg">
        </div>

        <div class="form-group">
            <label for="availability" class="text-light">availability</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="availability" value="availably" >
                <label for="radio-2" class="radio-label">Available</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="availability" value="Not availably" >
                <label for="radio-3" class="radio-label">Out of Stock</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>