.header2.bg-success-gradiant
  div
    //  Header 1 code 
    nav.navbar.navbar-expand-lg.h2-nav
      a.navbar-brand(href="#")
        img(src="img/avatars/LogoB.png", alt="Amie Gie Backery",width="50px",height="50px")
      button.navbar-toggler(type="button", data-toggle="collapse", data-target="#header2", aria-controls="header2", aria-expanded="false", aria-label="Toggle navigation")
        span.icon-menu
          i.fa.fa-bars
      .collapse.navbar-collapse.hover-dropdown#header2
        ul.navbar-nav
          li.nav-item.active
            a.nav-link(href="/") Home
          li.nav-item
            a.nav-link(href="contact") Contact
        ul.navbar-nav.ml-auto
          li.nav-item.active
            a.nav-link(href="login") Login
          li.nav-item
            a.btn.rounded-pill.btn-dark.py-2.px-4(href="register") Sign up
    //  End Header 1 code 


.container
  .card.shadow-lg.o-hidden.border-0.my-5
    .card-body.p-0
      .row
        .col-lg-5.d-none.d-lg-flex
          .flex-grow-1.bg-register-image(style=`background-image: url("img/cakes/bgWedding.jpg");`)
        .col-lg-7
          .p-5
            .text-center
              h4.text-dark.mb-4 Create an Account!
            form.user(method="POST")
              .form-group.row
                .col-sm-6.mb-3.mb-sm-0
                  input.form-control.form-control-user#exampleFirstName(type="text", placeholder="First Name", name="first_name")
                .col-sm-6
                  input.form-control.form-control-user#exampleFirstName(type="text", placeholder="Last Name", name="last_name")
              .form-group
                input.form-control.form-control-user#exampleInputEmail(type="email", aria-describedby="emailHelp", placeholder="Email Address", name="email")
              .form-group.row
                .col-sm-6.mb-3.mb-sm-0
                  input.form-control.form-control-user#examplePasswordInput(type="password", placeholder="Password", name="password")
                .col-sm-6
                  input.form-control.form-control-user#exampleRepeatPasswordInput(type="password", placeholder="Repeat Password", name="password_repeat")
              button.btn.btn-primary.btn-block.text-white.btn-user(type="submit") Register Account
              hr
            .text-center
              a.small(href="forgot-password") Forgot Password?
            .text-center
              a.small(href="login") Already have an account? Login!
